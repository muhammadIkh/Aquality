<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <androidx.cardview.widget.CardView
            android:layout_width="362dp"
            android:layout_height="850dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            app:cardBackgroundColor="@color/my_prime"
            app:cardCornerRadius="28dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="28dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:text="Isi indikator diibawah"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Derajat Keasaman (PH)"
                    android:textColor="@color/white"
                    android:textSize="15dp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="311dp"
                    android:layout_height="47dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="15dp">

                    <EditText
                        android:id="@+id/ph"
                        android:layout_width="match_parent"
                        android:layout_height="65dp"
                        android:inputType="text" />
                </androidx.cardview.widget.CardView>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Hardness"
                    android:textColor="@color/white"
                    android:textSize="15dp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="311dp"
                    android:layout_height="47dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="15dp">

                    <EditText
                        android:id="@+id/Hardness"
                        android:layout_width="match_parent"
                        android:layout_height="65dp"
                        android:inputType="text" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Solids"
                    android:textColor="@color/white"
                    android:textSize="15dp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="311dp"
                    android:layout_height="47dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="15dp">

                    <EditText
                        android:id="@+id/Solids"
                        android:layout_width="match_parent"
                        android:layout_height="65dp"
                        android:inputType="text" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Chloramines"
                    android:textColor="@color/white"
                    android:textSize="15dp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="311dp"
                    android:layout_height="47dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="15dp">

                    <EditText
                        android:id="@+id/chr"
                        android:layout_width="match_parent"
                        android:layout_height="65dp"
                        android:inputType="text" />
                </androidx.cardview.widget.CardView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Sulfate"
                    android:textColor="@color/white"
                    android:textSize="15dp" />
                <androidx.cardview.widget.CardView
                    android:layout_width="311dp"
                    android:layout_height="47dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="15dp">

                    <EditText
                        android:id="@+id/sulfate"
                        android:layout_width="match_parent"
                        android:layout_height="65dp"
                        android:inputType="text" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Organic Carbon"
                    android:textColor="@color/white"
                    android:textSize="15dp" />
                <androidx.cardview.widget.CardView
                    android:layout_width="311dp"
                    android:layout_height="47dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="15dp">

                    <EditText
                        android:id="@+id/oc"
                        android:layout_width="match_parent"
                        android:layout_height="65dp"
                        android:inputType="text" />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Conductivity"
                    android:textColor="@color/white"
                    android:textSize="15dp" />
                <androidx.cardview.widget.CardView
                    android:layout_width="311dp"
                    android:layout_height="47dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="15dp">

                    <EditText
                        android:id="@+id/conduct"
                        android:layout_width="match_parent"
                        android:layout_height="65dp"
                        android:inputType="text" />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Trihalomethanes"
                    android:textColor="@color/white"
                    android:textSize="15dp" />
                <androidx.cardview.widget.CardView
                    android:layout_width="311dp"
                    android:layout_height="47dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="15dp">

                    <EditText
                        android:id="@+id/tri"
                        android:layout_width="match_parent"
                        android:layout_height="65dp"
                        android:inputType="text" />

                </androidx.cardview.widget.CardView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Turbidity"
                    android:textColor="@color/white"
                    android:textSize="15dp" />
                <androidx.cardview.widget.CardView
                    android:layout_width="311dp"
                    android:layout_height="47dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="15dp">

                    <EditText
                        android:id="@+id/tur"
                        android:layout_width="match_parent"
                        android:layout_height="65dp"
                        android:inputType="text" />

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="100dp"
                    android:layout_marginTop="1dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnBack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="8dp"
                        android:gravity="center"
                        android:text="Back"
                        app:backgroundTint="@color/btn_no"
                        app:cornerRadius="100dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnNext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="8dp"
                        android:text="Next"
                        app:backgroundTint="@color/btn_yes"
                        app:cornerRadius="100dp" />
                </LinearLayout>
            </LinearLayout>


        </androidx.cardview.widget.CardView>
    </RelativeLayout>



</RelativeLayout>

